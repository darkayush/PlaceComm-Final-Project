const express = require('express');
const path = require('path');
const app = express();

app.set('view engine', 'ejs');
app.set('views', path.join(__dirname, 'views')); // This points to the main 'views' folder

app.use(express.static(path.join(__dirname,'Assets')));


app.get('/', (req, res) => {
    res.render('partials/mainpage'); // Render 'mainpage' from 'partials'
});

app.listen(3000, () => {
    console.log('Server running on http://localhost:3000');
});
